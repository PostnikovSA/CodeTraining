/*
https://www.youtube.com/watch?v=CyMOlixfPMA

Author: #SimpleCode.

Task: Enter three numbers and display the sum value and the product of these numbers.

Задача: Введите три числа и выведите на экран значение суммы и произведение этих чисел.
*/

using System;
    class Demo
    {
        static void Main()
        {
        Console.WriteLine("Enter any three numbers:\n");
        
        string str_a = Console.ReadLine();
        int a = Convert.ToInt32(str_a);

        string str_b = Console.ReadLine();
        int b = Convert.ToInt32(str_b);

        string str_c = Console.ReadLine();
        int c = Convert.ToInt32(str_c);

        int d = a + b + c;
        Console.WriteLine("\nSum of three numbers: "+d+"\n");

        int e = a * b * c;
        Console.WriteLine("Product of three numbers: "+e+"\n");
        }    
    }
