Task: Find the sum of even numbers in an array.

Задача: Найти сумму четных чисел в массиве.
*/

using System;

namespace SumEvenNumberInArray
{
    class program
    {
        static void Main(string[] args)
        {
            int []numArray = {1, 3, 5, 7, 9, 2, 4, 6, 8, 0};
            int sumEvenNumbers = 0;

            for (int i = 0; i < numArray.Length; i++)
            {
            if ((numArray[i] % 2) == 0)
                {
                    sumEvenNumbers = sumEvenNumbers + numArray[i];
                }
            }
            Console.WriteLine(sumEvenNumbers);
        }
    }
}
