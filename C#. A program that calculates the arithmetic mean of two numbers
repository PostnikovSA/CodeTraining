Author: #SimpleCode.
Task: Write a program that calculates the arithmetic mean of two numbers.
Задача: Напишите программу, вычисляющую среднее арифметическое двух чисел.
*/

using System;
class Demo
{
    static void Main()
    {
        Console.WriteLine("Enter any two numbers:\n");
        
        string str_a = Console.ReadLine();
        double a = Convert.ToDouble(str_a);

        string str_b = Console.ReadLine();
        double b = Convert.ToDouble(str_b);

        double c = (a + b) / 2;
        Console.WriteLine("\nArithmetic mean of two numbers: " + c+"\n");
    }
}
